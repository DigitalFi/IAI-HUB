<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_profil_arsitek2">

    <LinearLayout
        android:background="#d4d5d6"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/menu1"
                    android:padding="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/foodImage"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:src="@drawable/slider1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"/>

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/propertyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/foodImage"
                        android:layout_toRightOf="@+id/foodImage"
                        android:layout_weight="1"
                        android:text="Gema Pesona"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/street1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/propertyName"
                        android:layout_alignStart="@+id/propertyName"
                        android:layout_below="@+id/propertyName"
                        android:text="14 Street/3rd Block"
                        android:textColor="#A2A2A2"
                        android:textSize="14dp" />

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/street2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/street1"
                        android:layout_alignStart="@+id/street1"
                        android:layout_below="@+id/street1"
                        android:text="Super Build-up Area:1060 Sq.Ft"
                        android:textColor="#A2A2A2"
                        android:textSize="12dp" />

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/street2"
                        android:layout_alignStart="@+id/street2"
                        android:layout_below="@+id/street2"
                        android:text="Tahun Pembuatan 2005"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/menu5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:id="@+id/foodImage2"
                        android:src="@drawable/slider3"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"/>

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/propertyName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/foodImage2"
                        android:layout_toRightOf="@+id/foodImage2"
                        android:layout_weight="1"
                        android:text="Kemang Village"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/street3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/propertyName2"
                        android:layout_alignStart="@+id/propertyName2"
                        android:layout_below="@+id/propertyName2"
                        android:text="14 Street/3rd Block"
                        android:textColor="#A2A2A2"
                        android:textSize="14dp" />

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/street4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/street3"
                        android:layout_alignStart="@+id/street3"
                        android:layout_below="@+id/street3"
                        android:text="Super Build-up Area:1060 Sq.Ft"
                        android:textColor="#A2A2A2"
                        android:textSize="12dp" />

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/amount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/street4"
                        android:layout_alignStart="@+id/street4"
                        android:layout_below="@+id/street4"
                        android:text="Tahun Pembuatan 2017"
                        android:textColor="#000"
                        android:textSize="14dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/menu3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:id="@+id/foodImage3"
                        android:src="@drawable/slider4"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"/>

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/propertyName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/foodImage3"
                        android:layout_toRightOf="@+id/foodImage3"
                        android:layout_weight="1"
                        android:text="Pesona Estate"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/street5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/propertyName4"
                        android:layout_alignStart="@+id/propertyName4"
                        android:layout_below="@+id/propertyName4"
                        android:text="14 Street/3rd Block"
                        android:textColor="#A2A2A2"
                        android:textSize="14dp" />

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/street6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/street5"
                        android:layout_alignStart="@+id/street5"
                        android:layout_below="@+id/street5"
                        android:text="Super Build-up Area:1060 Sq.Ft"
                        android:textColor="#A2A2A2"
                        android:textSize="12dp"
                        tools:ignore="UnknownId" />

                    <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/amount6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/street6"
                        android:layout_alignStart="@+id/street6"
                        android:layout_below="@+id/street6"
                        android:text="Tahun Pembuatan 2018"
                        android:textColor="#000"
                        android:textSize="14dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

</LinearLayout>
</LinearLayout>