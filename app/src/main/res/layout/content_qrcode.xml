<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/cardView">
        <RelativeLayout
            android:id="@+id/menu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp">

            <ImageView
                android:id="@+id/foodImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/arsitek4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp" />

            <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/propertyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/foodImage"
                android:layout_toRightOf="@+id/foodImage"
                android:layout_weight="1"
                android:text="Ahmad Djaelani"
                android:textColor="#000"
                android:textSize="20dp" />

            <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/street1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/propertyName"
                android:layout_alignStart="@+id/propertyName"
                android:layout_below="@+id/propertyName"
                android:text="Aktif"
                android:textColor="#A2A2A2"
                android:textSize="14dp" />

            <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/street2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/street1"
                android:layout_alignStart="@+id/street1"
                android:layout_below="@+id/street1"
                android:text="Super Build-up Area:1060 Sq.Ft"
                android:textColor="#A2A2A2"
                android:textSize="12dp" />

            <com.lobothijau.carouselsederhana.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/street2"
                android:layout_alignStart="@+id/street2"
                android:layout_below="@+id/street2"
                android:text="0895345748278"
                android:textColor="#000"
                android:textSize="14dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/code" />


</RelativeLayout>
